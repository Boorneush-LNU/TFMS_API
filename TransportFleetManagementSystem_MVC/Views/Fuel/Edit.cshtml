@model TransportFleetManagementSystem.Model.Fuel

<h2>Edit Fuel Record</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="FuelId" />

    <div class="form-group">
        <label asp-for="VehicleId">Vehicle Registration Number</label>
        <select asp-for="VehicleId" asp-items="ViewBag.Vehicles" class="form-control">
            <option value="">-- Select Vehicle Registration --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="FuelQuantity">Fuel Quantity</label>
        <input asp-for="FuelQuantity" class="form-control" />
        <span asp-validation-for="FuelQuantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date">Date</label>
        <input asp-for="Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FuelPrice">Fuel Price</label>
        <input asp-for="FuelPrice" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
