@{
    ViewData["Title"] = "Sign Up";
    Layout = null;
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
<head>
    <title>@ViewData["Title"]</title>
    <style>
        * {
            font-family: "Poppins", sans-serif;
        }
        body {
            background-color: #f4f4f4;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
            color:#000046
        }

        header {
            background-color: #000046;
            color: white;
            text-align: center;
            height:50px;
            margin-top: auto;
        }

        main {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        form {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
            text-align: center;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            text-align: left;
        }

        input[type="text"],
        input[type="password"],
        input[type="email"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        input[type="submit"] {
            background-color: #000046;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
            margin-top: 10px;
            font-weight:bold;
        }

            input[type="submit"]:hover {
                background-color: #000046;
                color:white;
            }

        p[style="color:red"] {
            color: red;
            text-align: center;
            margin-bottom: 10px;
        }

        h2,h1{
            text-align: center;
        }

        footer {
            background-color: #2F78C4;
            font-family: "Poppins", sans-serif;
            font-size: 12px;
            color: black;
            text-align: center;
            margin-top: auto;
        }

        .login-link {
            margin-top: 10px;
        }

    </style>
</head>
<body>
    <header>
        <h1>Transportation Fleet Management System</h1>
    </header>
    <main>
        <form asp-action="Register" method="post">
            <h1>Sign Up</h1>
            @if (ViewBag.ErrorMessage != null)
                {
                <p style="color:red">@ViewBag.ErrorMessage</p>
                }

            <label for="Username">Username:</label>
            <input type="text" id="Username" name="Username" value="@Model?.Username">
            <label for="Password">Password:</label>
            <input type="password" id="Password" name="Password" value="@Model?.Password">
            <label for="Email">Email:</label>
            <input type="email" id="Email" name="Email" value="@Model?.Email">
            <input type="submit" value="Register">
            <p class="login-link">Already have an account? <a asp-controller="Login" asp-action="Index">Login</a></p>
        </form>
    </main>
    <footer>
        <p>&copy; @DateTime.Now.Year My Company. All rights reserved.</p>
    </footer>
</body>
