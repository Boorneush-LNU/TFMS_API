@model TransportFleetManagementSystem.Models.Driver
@{
	ViewData["Title"] = "Driver Details";
}

<div class="container mt-4">
	<h2>Driver Details</h2>
	<table class="table table-bordered">
		<tr>
			<th>Name</th>
			<td>@Model.Name</td>
		</tr>
		<tr>
			<th>Phone</th>
			<td>@Model.Phone</td>
		</tr>
		<tr>
			<th>Address</th>
			<td>@Model.Address</td>
		</tr>
		<tr>
			<th>License Number</th>
			<td>@Model.LicenseNumber</td>
		</tr>
	</table>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>