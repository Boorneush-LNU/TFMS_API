@model TransportFleetManagementSystem.Model.Driver
@{
	ViewData["Title"] = "Driver Details";
}

<div class="container mt-4">
	<table class="table table-bordered">
		<tr>
			<th>Name</th>
			<td>@Model.Name</td>
		</tr>
		<tr>
			<th>Phone</th>
			<td>@Model.Phone</td>
		</tr>
		<tr>
			<th>Address</th>
			<td>@Model.Address</td>
		</tr>
		<tr>
			<th>License Number</th>
			<td>@Model.LicenseNumber</td>
		</tr>
	</table>
	<a asp-action="Edit" class="btn btn-secondary">Edit</a>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>

</div>