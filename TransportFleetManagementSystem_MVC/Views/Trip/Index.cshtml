<style>

    .card-title {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }


    .card-body {
        border-top: 2px solid white;
        padding-top: 1rem;
    }

    .container {
        width: 100%;
        height: auto;
    }

    canvas {
        max-width: 100%;
        max-height: 100%;
    }

    #map {
        height: 180px;
        width: 1500px;
        border-radius: 15px;
        border: 5px solid #000046;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        margin: 10px;
        margin-bottom: 20px;
    }

    #button {
        margin-left: 10px;
        padding-top: 10px;
    }

