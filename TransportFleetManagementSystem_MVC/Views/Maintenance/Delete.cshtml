@model TransportFleetManagementSystem.Model.Maintenance

@{
    ViewData["Title"] = "Delete Maintenance";
}

<h2>Delete Maintenance</h2>

<h4>Maintenance</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Vehicle
        </dt>
        <dd class="col-sm-10">
            @Model.Vehicle.RegistrationNumber
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Scheduled Date
        </dt>
        <dd class="col-sm-10">
            @Model.ScheduledDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
    </dl>


    <form asp-action="Delete">
        <input type="hidden" asp-for="VehicleId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn" style="background-color:#000046 ; color:white" asp-action="Index">Back to List</a>

    </form>
</div>