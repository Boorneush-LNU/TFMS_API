@model TransportFleetManagementSystem.Model.Maintenance

@{
    ViewData["Title"] = "Edit Maintenance";
}
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaintenanceId" />

    <div class="form-group">
        <label asp-for="VehicleId">Vehicle Registration Number</label>
        <select asp-for="VehicleId" asp-items="ViewBag.Vehicles" class="form-control" disabled>
            <option value="">-- Select Vehicle Registration --</option>
        </select>
        <input type="hidden" asp-for="VehicleId" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-for="ScheduledDate" />
        <span asp-validation-for="ScheduledDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NextMaintenanceDate">Next Maintenance Date</label>
        <input asp-for="NextMaintenanceDate" class="form-control" type="date" />
        <span asp-validation-for="NextMaintenanceDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control">
            <option value="">-- Select Status --</option>
            <option value="Good Condition">Good Condition</option>
            <option value="Need Maintenance">Need Maintenance</option>
            <option value="Under Maintenance">Under Maintenance</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn f" style="background-color:#000046 ; color:white" />
        <a class="btn " style="background-color:#000046 ; color:white" asp-action="Index">Back to List</a>
    </div>
</form>