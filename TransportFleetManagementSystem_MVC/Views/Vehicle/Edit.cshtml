@model TransportFleetManagementSystem.Model.Vehicle

@{
    ViewData["Title"] = "Edit Vehicle";
}

<style>
    .required-field::after {
        content: " *";
        color: red;
    }
</style>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VehicleId" />
            <div class="form-group">
                <label asp-for="RegistrationNumber" class="control-label required-field"></label>
                <input asp-for="RegistrationNumber" class="form-control" />
                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label required-field"></label> 
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label required-field"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastServicedDate" class="control-label required-field"></label>
                <input asp-for="LastServicedDate" class="form-control" />
                <span asp-validation-for="LastServicedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn" style="background-color:#000046; color:white" />
                <a class="btn" style="background-color:#000046; color:white; margin-left: 10px;" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}