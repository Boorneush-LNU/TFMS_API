					margin: auto;
					color: white;
				}

		.nav-link {
			white-space: nowrap;
		}

		.navbar .navbar-nav .nav-item .nav-link i {
			margin-right: 5px;
		}

		.navbar .navbar-nav .nav-item {
			background-color: #000046;
		}

		.floating-nav {
			position: fixed;
			top: 50%;
			left: 0;
			transform: translateY(-50%);
			background-color: #000046;
			padding: 3px;
			border-radius: 0 5px 5px 0;
			z-index: 1001; /* Ensure the floating nav is above other content */
			width: 60px;
		}

			.floating-nav .nav-text {
				display: none;
				position: absolute;
				left: 50px; /* Adjust position as needed */
				background-color: #000046;
				color: white;
				padding: 5px;
				border-radius: 4px;
				white-space: nowrap;
				z-index: 500; /* Ensure the hover text is above the floating nav */
			}

			.floating-nav li {
				list-style: none;
				margin: 10px 0;
			}

			.floating-nav .nav-link {
				display: flex;
				align-items: center;
				color: white;
				text-decoration: none;
				position: relative;
			}

				.floating-nav .nav-link i {
					font-size: 20px;
				}

		.navbar-nav .nav-link i {
			font-size: 26px; /* Adjust the size as needed */
			color: white; /* Change icon color to white */
		}

		.nav.flex-column .nav-item,
		.nav.flex-column li {
			border: 1px solid #000000; /* Border color */
			padding: 5px; /* Padding inside the box */
			margin-bottom: 2px; /* Space between boxes */
			border-radius: 2px; /* Rounded corners */
		}

		.menu-bar {
			display: none; /* Initially hidden */
			position: absolute;
			top: 60px; /* Adjust based on your navbar height */
			left: 0;
			background-color: #000046;
			padding: 10px;
			border-radius: 5px;
			z-index: 999;
		}

			.menu-bar ul {
				list-style: none;
				padding: 0;
				margin: 0;
				display: flex; /* Display items in a row */
			}

				.menu-bar ul li {
					margin: 0 10px; /* Space between menu items */
					border: 1px solid white; /* White border around each menu item */
					border-radius: 4px; /* Optional: Rounded corners */
				}

					.menu-bar ul li a {
						color: white;
						text-decoration: none;
						font-size: 13.78px; /* Reduce text size */
					}


						.menu-bar ul li a i {
							font-size: 16px; /* Reduce icon size */
						}

		#currentDateTime {
			font-size: 16px;
		}

		.dropdown-menu {
            position: fixed; /* Fixed positioning for floating effect */
            top: 50px; /* Adjust top position as needed */
            right: 10px; /* Adjust right position as needed */
            left: auto;
            z-index: 1000;
            min-width: 200px;
            padding: 10px;
            border: 1px solid rgba(0, 0, 0, 0.15);
            border-radius: 0.25rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.175);
            background-color: white;
        }

        .dropdown-menu .dropdown-item {
            padding: 8px 15px;
            display: flex;
            align-items: center;
        }

        .dropdown-menu .dropdown-item img {
            margin-right: 10px;
            height: 30px;
            width: 30px;
            border-radius: 50%;
        }

		footer {
			background-color: #2F78C4;
			font-family: "Poppins", sans-serif;
			font-size: 12px;
			color: black;
			text-align: center;
			margin-top: auto;
		}
	</style>

	<!--Script for dispalying Current Date and Time-->
	<script>
		function updateDateTime() {
			var now = new Date();
			var optionsDate = { year: 'numeric', month: 'long', day: 'numeric' };
			var optionsTime = { hour: '2-digit', minute: '2-digit' };
			var dateString = now.toLocaleDateString('en-US', optionsDate);
			var timeString = now.toLocaleTimeString('en-US', optionsTime);
			var dateTimeString = dateString + ' ' + timeString;
			document.getElementById('currentDateTime').innerText = dateTimeString;
		}

		setInterval(updateDateTime, 60000);
		window.onload = updateDateTime;
	</script>
	<!--Script for dispalying Current Date and Time-->

